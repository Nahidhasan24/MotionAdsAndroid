<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Login_Activity"
    android:orientation="vertical"
    android:background="@drawable/newui"
    android:gravity="center_horizontal">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/splashh"
            android:scaleType="fitCenter"
            />

        <EditText
            android:id="@+id/lmail"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/custom_style"
            android:hint="User Mail :"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawableStart="@drawable/person"
            />
        <EditText
            android:id="@+id/lpass"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="Password :"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            android:background="@drawable/custom_style"
            android:padding="10dp"
            android:textColor="@color/white"
            android:drawableStart="@drawable/password"
            />
        <TextView
            android:id="@+id/forgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Forget password ?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />
        <Button
            android:id="@+id/loginbtn"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="italic"
            android:text="Log in"
            android:background="@drawable/bottom_curved"
            />
        <TextView
            android:id="@+id/newregister"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="New Register? Click Here"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="20sp"
            />
    </LinearLayout>
</ScrollView>



</LinearLayout>
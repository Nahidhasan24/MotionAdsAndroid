<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.HelpCenter_Activity"
    android:orientation="vertical"
    android:background="@drawable/newui">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            app:lottie_rawRes="@raw/callcenter"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="250dp"
            android:layout_height="69dp"
            android:maxLines="2"
            android:text="Help Center
             7/24  Open"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:background="@drawable/bottom_curved"
            android:layout_gravity="center"
            android:fontFamily="serif"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >


        <ImageView
            android:id="@+id/whatsapph"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/whatsapp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"

            />

        <ImageView
            android:id="@+id/yiutubeh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/yiutube"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:id="@+id/facebookgrp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"

            />
        <ImageView
            android:id="@+id/facebookidmd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="-8dp"
            />






    </LinearLayout>


</LinearLayout>